<!-- custom_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with white color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White background color -->
            <corners android:radius="20dp" /> <!-- Border radius -->
        </shape>
    </item>
    <!-- Border shape with black color -->
        <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
            <shape android:shape="rectangle">
                <stroke android:width="1dp" android:color="#FAFAFA" /> <!-- Black border -->
                <corners android:radius="20dp" />
            </shape>
        </item>
</layer-list>
